<assembly>
    <id>deploy</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>true</useProjectArtifact>
            <includes>
                <include>com.mvad:test-project</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>/conf</outputDirectory>
            <directory>src/main/resources/conf</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/bin</outputDirectory>
            <directory>src/main/scripts/bin</directory>
            <directoryMode>755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>/python</outputDirectory>
            <directory>src/main/scripts/python</directory>
            <directoryMode>755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>/pig</outputDirectory>
            <directory>src/main/scripts/pig</directory>
            <directoryMode>755</directoryMode>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <outputDirectory>/jobs</outputDirectory>
            <directory>src/main/resources/jobs</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>/lib</outputDirectory>
            <directory>target/classes/lib</directory>
        </fileSet>
    </fileSets>
</assembly>
